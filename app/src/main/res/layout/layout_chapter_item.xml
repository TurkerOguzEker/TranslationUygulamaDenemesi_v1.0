<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#F5F5F5"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/tvChapterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yeni Bölüm"
        android:textStyle="bold"
        android:textColor="#1565C0"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etChapterStoryPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hikaye PDF Linki"
        android:inputType="textUri"
        android:background="@android:drawable/edit_text"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etChapterQuestionPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Soru PDF Linki"
        android:inputType="textUri"
        android:background="@android:drawable/edit_text"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/etOptA" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="A Şıkkı"/>
        <EditText android:id="@+id/etOptB" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="B Şıkkı"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/etOptC" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="C Şıkkı"/>
        <EditText android:id="@+id/etOptD" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="D Şıkkı"/>
    </LinearLayout>

    <TextView android:text="Doğru Cevap:" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
    <Spinner
        android:id="@+id/spChapterCorrect"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:drawable/btn_dropdown"/>

    <Button
        android:id="@+id/btnRemoveChapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bu Bölümü Sil"
        android:textSize="10sp"
        android:backgroundTint="#FF5252"
        android:layout_marginTop="8dp"/>

</LinearLayout>