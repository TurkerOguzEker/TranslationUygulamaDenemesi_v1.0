<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/ivSheetIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:background="@drawable/bg_profile_button_round"
                    android:padding="8dp"
                    app:tint="#555"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvDetailName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KullanÄ±cÄ± AdÄ±"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/tvDetailEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@ornek.com"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/tvDetailUid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UID: ..."
                        android:textSize="10sp"
                        android:layout_marginTop="2dp"
                        android:textColor="#BDBDBD"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="24dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#E3F2FD"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">
                        <TextView android:id="@+id/tvStatWords" android:text="0" android:textSize="18sp" android:textStyle="bold" android:textColor="#1565C0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="Kelime" android:textSize="12sp" android:textColor="#1565C0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#E8F5E9"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">
                        <TextView android:id="@+id/tvStatRevenue" android:text="â‚º0" android:textSize="18sp" android:textStyle="bold" android:textColor="#2E7D32" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="Harcama" android:textSize="12sp" android:textColor="#2E7D32" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#FFF3E0"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">
                        <TextView android:id="@+id/tvStatStreak" android:text="0" android:textSize="18sp" android:textStyle="bold" android:textColor="#EF6C00" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="GÃ¼n Seri" android:textSize="12sp" android:textColor="#EF6C00" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <TextView android:text="ðŸ“‹ Teknik Detaylar" android:textStyle="bold" android:textColor="#424242" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="#FAFAFA"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                        <TextView android:text="KayÄ±t Tarihi:" android:textStyle="bold" android:textColor="#616161" android:layout_width="120dp" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/tvDetailRegDate" android:text="-" android:textColor="#212121" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                        <TextView android:text="Son GiriÅŸ:" android:textStyle="bold" android:textColor="#616161" android:layout_width="120dp" android:layout_height="wrap_content"/>
                        <TextView android:id="@+id/tvDetailLastLogin" android:text="-" android:textColor="#212121" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp" android:gravity="center_vertical">
                        <TextView android:text="Rol:" android:textStyle="bold" android:textColor="#616161" android:layout_width="120dp" android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/btnChangeRole"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="User"
                            android:textSize="12sp"
                            android:backgroundTint="#757575"/>
                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchPremiumDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Premium Ãœyelik Aktif"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchBan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KullanÄ±cÄ±yÄ± Yasakla (Ban)"
                        app:trackTint="#FFCDD2"
                        app:thumbTint="#D32F2F"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView android:text="ðŸ•’ Ä°ÅŸlem GeÃ§miÅŸi (Loglar)" android:textStyle="bold" android:textColor="#424242" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUserLogs"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="false"
                android:background="#F5F5F5"/>

            <Button
                android:id="@+id/btnCloseSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kapat"
                android:layout_marginTop="16dp"
                android:backgroundTint="#212121"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>